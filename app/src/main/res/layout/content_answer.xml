<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="friendlyitsolution.com.itmconnect.answer"
    tools:showIn="@layout/activity_answer">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">   <!-- android:background="?attr/selectableItemBackgroundBorderless" will cause this Custom View to make ripple effect -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:layout_weight="12"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="horizontal"
    android:background="#ffffff"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/rel1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/app_blue"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/img"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="faculty"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/type"
                android:layout_marginRight="25dp"
                android:textColor="@color/md_grey_500"
                />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_toRightOf="@+id/img"
                android:text="Meet Patel"
                android:textStyle="bold"
                android:textColor="@color/app_blue"
                android:textSize="20dp" />








            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 sem"
                android:textSize="12dp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/sem"
                android:textColor="@color/black_off"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgpic"
                android:layout_below="@+id/sem"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgpic"
                android:textSize="17dp"
                android:id="@+id/que"
                android:text="s d kjasd hjasd dladkasjdkasdkasd akd jajdakjshdjadh jkahkjasdhask dkjashkjd sakdhkasd"
              />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:25 PM"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:id="@+id/time"
                android:background="@drawable/rightbut"
                android:padding="10dp"
                android:textColor="@color/white"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,Mar,2016"
                android:textSize="13dp"
                android:id="@+id/month"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/que"/>




        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@color/app_blue">

</View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:id="@+id/chatlistline">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mycont">

            </FrameLayout>


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textfieldbk"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                android:weightSum="5">



                <AutoCompleteTextView
                    android:layout_width="0dp"

                    android:ems="10"
                    android:id="@+id/ans"
                    android:layout_weight="4.3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:lines="8"
                    android:minLines="1"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:hint="Your Answer...."
                    android:textColor="#120b0b"
                    android:textColorHint="#848181"

                    android:textColorHighlight="@color/colorPrimaryDark" />






                <Button
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight=".7"
                    android:maxHeight="45dp"
                    android:text=""
                    android:id="@+id/send"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ic_send_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


</ScrollView>
