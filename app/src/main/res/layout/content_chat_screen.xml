<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_chat_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="friendlyitsolution.com.itmconnect.chatScreen"
    tools:showIn="@layout/activity_chat_screen">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:layout_weight="12"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/lineRight1sss"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:orientation="vertical"
            android:id="@+id/chatlistline">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:id="@+id/bklist">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:id="@+id/bkiconlist"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical">



                </LinearLayout>
            </HorizontalScrollView>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp">  </ListView>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textfieldbk"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:layout_marginTop="2dp"
                android:id="@+id/chatlastseen"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                android:weightSum="7">



                <AutoCompleteTextView
                    android:layout_width="0dp"

                    android:ems="10"
                    android:id="@+id/chatText"
                    android:layout_weight="6.1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:lines="8"
                    android:minLines="1"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:hint="start messaging"
                    android:textColor="#120b0b"
                    android:textColorHint="#848181"

                    android:textColorHighlight="@color/colorPrimaryDark" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.7"
                    android:maxHeight="45dp"
                    android:text=""
                    android:id="@+id/bsend"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ic_send_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>







</RelativeLayout>
